<div elgg-layout="one-column">
	<div class="elgg-body elgg-main">
		<div class="elgg-head">
        	<h2 elgg-heading="main">Log in</h2>
        </div>
		<div class="elgg-content">
			<form class="elgg-form elgg-form-account elgg-form-login">
            	<label class="elgg-form-field">
            	    <span class="elgg-form-field-label">Email</span>
                	<input type="email" name="username" autocorrect="false" class="elgg-input-text" autofocus>
                </label>
                <div>
                	<label>
                		<input type="checkbox" name="persistent" value="true" checked>
                		<span>Remember me</span>
                	</label>
                </div>
                <label class="elgg-form-field">
                	<span class="elgg-form-field-label">Password</span>
                    <input type="password" name="password" class="elgg-input-password">
                </label>
            	<div>
                	<a ui-sref="forgotpassword">Lost password</a>
                	<a ui-sref="register">Register</a>
                </div>
                <div class="elgg-form-field">
                	<button type="submit" elgg-button="submit">Log in</button>
                </div>
            </form>
        </div>
	</div>
</div>